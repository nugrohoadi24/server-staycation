<div class="tab-pane fade show active" id="detail" role="tabpanel" aria-labelledby="nav-home-tab">
<!-- DataTales Example -->
<div class="card shadow">
  <div class="card-header d-flex justify-content-between py-3">
    <h6 class="m-0 font-weight-bold text-primary">Detail</h6>
  </div>
  <div class="row">
    <div class="col-12 mx-4 mt-4">
      <div class="mb-2">
        <h5><strong>Name</strong> : <%= item.title %></h5>
      </div>
      <div class="mb-2">
        <h5><strong>Category</strong> : <%= item.categoryId.name %></h5>
      </div>
      <div class="mb-2">
        <h5><strong>Description</strong> : <%= item.description %></h5>
      </div>
      <div class="mb-2">
        <h5><strong>Price</strong> : <%= item.price %></h5>
      </div>
      <div class="mb-2">
        <h5><strong>Country</strong> : <%= item.country %></h5>
      </div>
      <div class="mb-2">
        <h5><strong>City</strong> : <%= item.city %></h5>
      </div>
      <div class="mb-2">
        <h5><strong>Popular</strong> : <%= item.isPopular %></h5>
      </div>
      <!-- <div class="mb-2">
        <h5><strong>Feature</strong> : </h5>
      </div>
      <div>
        <h5><strong>Activity</strong> : </h5>
      </div> -->
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-12 mx-4 my-2">
      <h5><strong>Image</strong></h5>
    </div>
    <% for(let i=0; i < item.imageId.length; i++) { %>
    <div class="col-md-4">
      <div class="card shadow m-4">
        <div class="card-body">
            <img src="http://localhost:3000/<%= item.imageId[i].img_url %> " alt="Image" style="width: 100%; display: block;">
        </div>
      </div>
    </div>
    <% } %> 
  </div>
  <div class="card-footer py-3 text-right">
    <a class="btn btn-primary w-100" href="/item">
       Back
    </a>
  </div>
</div>
</div> 
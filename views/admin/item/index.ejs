<script>
  $('#dataTable').on('click', '.btn-edit', function() {
    let id = $(this).data('id');
    let title = $(this).data('title');
    let price = $(this).data('price');
    let city = $(this).data('city');
    let description = $(this).data('description');

    $('#edit_modal').modal('show');
    $('#id').val(id);
    $('.title').val(title);
    $('.price').val(price);
    $('.city').val(city);
    $('.description').val(description);
  })

  $('#dataTableFeature').on('click', '.btn-edit-feature', function() {
    let id = $(this).data('id');
    let name = $(this).data('name');
    let qty = $(this).data('qty');

    $('#edit_modal_feature').modal('show');
    $('#id').val(id);
    $('.name_feature').val(name);
    $('.qty').val(qty);
  })

  $('#dataTableActivity').on('click', '.btn-edit-activity', function() {
    let id = $(this).data('id');
    let name = $(this).data('name');
    let type = $(this).data('type');

    $('#edit_modal_activity').modal('show');
    $('#id').val(id);
    $('.name_activity').val(name);
    $('.type').val(type);
  })
</script>


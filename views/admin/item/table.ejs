 <!-- DataTales Example -->
 <div class="card shadow mb-4">
    <div class="card-header d-flex justify-content-between py-3">
      <h6 class="m-0 font-weight-bold text-primary">Data Item</h6>
    
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add_modal">
        <i class="fas fa-plus"></i>  Add Item
      </button>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>No</th>
              <th>Name</th>
              <th>Category</th>
              <th>Price</th>
              <th>City</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i = 0; i < item.length; i++) { %>
            
              <tr>
                <td><%= i + 1 %></td>
                <td><%= item[i].title %></td>
                <td><%= item[i].categoryId.name %></td>
                <td>Rp. <%= item[i].price %></td>
                <td><%= item[i].city %></td>
                <td>
                  <form action="/item/<%= item[i].id %>/category/<%= item[i].categoryId._id %>?_method=DELETE" method="POST">
                    <a href="/item/<%= item[i].id %>" 
                      class="btn btn-info"
                      data-id="<%= item[i].id %>"
                    >
                      <i class="fas fa-eye"></i>
                    </a>
                    <a 
                      href="javascript:void()"
                      class="btn btn-warning btn-edit" 
                      data-id="<%= item[i].id %>" 
                      data-title="<%= item[i].title %>"
                      data-price="<%= item[i].price %>"
                      data-city="<%= item[i].city %>"
                      data-description="<%= item[i].description %>"
                    >
                      <i class="fas fa-edit"></i>
                    </a>
                    <button type="submit" class="btn btn-danger">
                      <i class="fas fa-trash"></i>
                    </button>
                  </form>
                </td>
              </tr>

            <% } %>
          </tbody>
          <tfoot>
            <tr>
              <th>No</th>
              <th>Name</th>
              <th>Category</th>
              <th>Price</th>
              <th>City</th>
              <th>Action</th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
</div>
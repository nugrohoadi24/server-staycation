<script>
  $('#dataTable').on('click', '.btn-edit', function() {
    let id = $(this).data('id');
    let name_bank = $(this).data('name_bank');
    let rekening = $(this).data('rekening');
    let name_account = $(this).data('name_account');

    $('#edit_modal').modal('show');
    $('#id').val(id);
    $('.name_bank').val(name_bank);
    $('.rekening').val(rekening);
    $('.name_account').val(name_account);
  })
</script>

